<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<ScrollPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CursosController"
            fitToWidth="true"
            style="-fx-background: white;">

    <VBox spacing="20" style="-fx-padding: 20;">

        <!-- Panel superior: Lista de cursos y detalles -->
        <HBox spacing="20" alignment="TOP_LEFT">

            <!-- Panel izquierdo: Lista de cursos -->
            <VBox spacing="15" style="-fx-pref-width: 350px;">
                <Label text="Todos los Cursos"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <ListView fx:id="cursosListView"
                          style="-fx-pref-height: 300px; -fx-border-color: #e0e0e0; -fx-border-radius: 5;"
                          VBox.vgrow="ALWAYS"/>

                <Label text=" 5 cursos disponibles"
                       style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-font-style: italic;"/>
            </VBox>

            <!-- Separador vertical -->
            <Separator orientation="VERTICAL" style="-fx-padding: 0 10 0 0;"/>

            <!-- Panel derecho: Detalles del curso seleccionado -->
            <VBox spacing="20" style="-fx-pref-width: 600px;" HBox.hgrow="ALWAYS">

                <!-- T铆tulo de la secci贸n -->
                <Label text="Detalles del Curso"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <!-- Contenedor principal de detalles -->
                <VBox spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">

                    <!-- Encabezado con imagen y t铆tulo -->
                    <HBox spacing="15" alignment="TOP_LEFT">
                        <ImageView fx:id="cursoImageView"
                                   fitHeight="80"
                                   fitWidth="120"
                                   preserveRatio="true"
                                   style="-fx-border-radius: 5; -fx-border-color: #ddd;"/>

                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label fx:id="tituloCursoLabel"
                                   text="Selecciona un curso"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-wrap-text: true;"/>

                            <Label fx:id="instructorLabel"
                                   text="Instructor: -"
                                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
                        </VBox>
                    </HBox>

                    <!-- Descripci贸n del curso -->
                    <VBox spacing="8">
                        <Label text="Descripci贸n:"
                               style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label fx:id="descripcionCursoLabel"
                               text="Selecciona un curso de la lista para ver sus detalles completos."
                               style="-fx-text-fill: #555; -fx-wrap-text: true; -fx-line-spacing: 2px;"/>
                    </VBox>

                    <!-- Estad铆sticas del curso -->
                    <GridPane hgap="20" vgap="10" style="-fx-padding: 15 0 0 0;">
                        <columnConstraints>
                            <ColumnConstraints halignment="LEFT" prefWidth="150"/>
                            <ColumnConstraints halignment="LEFT" prefWidth="150"/>
                            <ColumnConstraints halignment="LEFT" prefWidth="150"/>
                        </columnConstraints>

                        <rowConstraints>
                            <RowConstraints prefHeight="30"/>
                            <RowConstraints prefHeight="30"/>
                        </rowConstraints>

                        <Label fx:id="duracionLabel" text="Duraci贸n: -" GridPane.columnIndex="0" GridPane.rowIndex="0"
                               style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
                        <Label fx:id="ratingLabel" text="Rating: -" GridPane.columnIndex="1" GridPane.rowIndex="0"
                               style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
                        <Label fx:id="estudiantesLabel" text="Estudiantes: -" GridPane.columnIndex="2" GridPane.rowIndex="0"
                               style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
                    </GridPane>

                    <!-- Botones de acci贸n -->
                    <HBox spacing="15" style="-fx-padding: 20 0 0 0;">
                        <Button fx:id="verDetalleButton" text=" Ver Detalle Completo"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                        <Button fx:id="inscribirButton" text=" Inscribirse en Curso"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                    </HBox>
                </VBox>

                <!-- Panel de m贸dulos y lecciones -->
                <VBox spacing="15">
                    <Label text="Estructura del Curso"
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <TableView fx:id="modulosTableView" style="-fx-pref-height: 200px;">
                        <columns>
                            <TableColumn fx:id="colModuloTitulo" text="M贸dulo" prefWidth="200"/>
                            <TableColumn fx:id="colModuloDescripcion" text="Descripci贸n" prefWidth="300"/>
                            <TableColumn fx:id="colModuloDuracion" text="Duraci贸n" prefWidth="100"/>
                            <TableColumn fx:id="colModuloLecciones" text="Lecciones" prefWidth="80"/>
                        </columns>
                    </TableView>

                    <TableView fx:id="leccionesTableView" style="-fx-pref-height: 200px;">
                        <columns>
                            <TableColumn fx:id="colLeccionTitulo" text="Lecci贸n" prefWidth="250"/>
                            <TableColumn fx:id="colLeccionTipo" text="Tipo" prefWidth="100"/>
                            <TableColumn fx:id="colLeccionDuracion" text="Duraci贸n" prefWidth="100"/>
                            <TableColumn fx:id="colLeccionCompletada" text="Estado" prefWidth="80"/>
                        </columns>
                    </TableView>

                    <!-- Botones de lecciones -->
                    <HBox spacing="15">
                        <Button fx:id="empezarLeccionButton" text=" Empezar Lecci贸n Actual"
                                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                        <Button fx:id="verTutorialButton" text=" Ver Tutorial"
                                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                    </HBox>
                </VBox>
            </VBox>
        </HBox>

        <!-- Panel inferior: B煤squeda y filtros -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="buscarButton" text=" Buscar Cursos"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>
            <Button fx:id="filtrarButton" text=" Filtrar por Categor铆a"
                    style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>
            <Button fx:id="limpiarButton" text=" Limpiar Filtros"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>
</ScrollPane>